@model IEnumerable<Projet_de_fin_de_formation.UserClient>

@{
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client.NomClient)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.NomClient)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.pseudo }) |
                @Html.ActionLink("Details", "Details", new { id=item.pseudo }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.pseudo })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
