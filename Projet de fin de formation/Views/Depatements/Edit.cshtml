@model Projet_de_fin_de_formation.Depatement

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Depatement</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idDepartement)

    <div class="form-group">
        <label for="nomDepartement">Département:</label>

        <div class="col-md-10">
            @Html.EditorFor(model => model.nomDepartement, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nomDepartement, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Liste des départements", "Index")
</div>
