@model Projet_de_fin_de_formation.Chantier

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

<h2>Terminer un chantier</h2>

<div>
    <hr />
    <table class="table">
        <tr>
            <th><label>Nom de chantier</label></th>
            <th><label>Client</label></th>
            <th><label>Adresse</label></th>
            <th><label>Chef de chantier</label></th>
            <th><label>Date de début</label></th>
            <th></th>

        </tr>
        <tr>
            <td>@Html.DisplayFor(model => model.NomChantier)</td>
            <td>@Html.DisplayFor(model => model.Client.NomClient)</td>
            <td>@Html.DisplayFor(model => model.AdresseChantier)</td>
            <td>@Html.DisplayFor(model => model.EmployeeTable.NomEmp)</td>
            <td>@Html.DisplayFor(model => model.DateDebChantier)</td>
            <td>
                <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Terminer", new { id = Model.IdChantier })'">Terminer</button>

                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">
                    Terminer avec recompense
                </button>
                <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Index")'">Annuler</button>

            </td>
        </tr>

    </table>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <form method="post" action="@Url.Action("Recompenser",Model)">
            <div class="modal-dialog" role="document">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Recompenser le chef de chantier</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Montant d'augementation</label>
                            <div class="col-md-10">
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.pointsA, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.pointsA, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                        <button type="submit" class="btn btn-primary">Augementer</button>

                    </div>

                </div>
            </div>
        </form>

    </div>

</div>

