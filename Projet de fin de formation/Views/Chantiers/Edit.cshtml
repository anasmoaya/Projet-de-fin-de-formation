@model Projet_de_fin_de_formation.Chantier

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Modifier le chantier</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdChantier)

    <div class="form-group">
        <label for="NomChantier" class="control-label col-md-2">Nom Chantier</label>

        <div class="col-md-10">
            @Html.EditorFor(model => model.NomChantier, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NomChantier, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="AdresseChantier" class="control-label col-md-2">Adresse</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.AdresseChantier, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AdresseChantier, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="DateDebChantier" class="control-label col-md-2">Date de début</label>

        <div class="col-md-10">
            @Html.EditorFor(model => model.DateDebChantier, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DateDebChantier, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="DateDinProj" class="control-label col-md-2">Date fin</label>

        <div class="col-md-10">
            @Html.EditorFor(model => model.DateFinProj, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DateFinProj, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label for="ChefProj" class="control-label col-md-2">Chef de projet</label>
        <div class="col-md-10">
            @Html.DropDownList("ChefProj", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ChefProj, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="IdClient" class="control-label col-md-2">Client</label>

        <div class="col-md-10">
            @Html.DropDownList("IdClient", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idClient, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="statut" class="control-label col-md-2">Statut</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.statut, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.statut, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Enregistrer" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Liste des chantiers", "Index")
</div>
