@model Projet_de_fin_de_formation.Client

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

<h2>Voulez vous vraiment supprimer ce client?</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label for="NomCient">Nom</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomClient)
        </dd>

        <dt>
            <label for="AdresseClient">Adresse</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdresseClient)
        </dd>

        <dt>
            <label for="TelClient">Télephone</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TelCLient)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-danger" /> |
            @Html.ActionLink("liste des clients", "Index")
        </div>
    }
</div>
